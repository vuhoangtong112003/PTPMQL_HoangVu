@model IEnumerable<NewMVCApp.Models.Person>

<h2>Person List</h2>
<a asp-action="Create" class="btn btn-primary">Add Person</a>

<table class="table table-bordered mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Full Name</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Fullname</td>
                <td>@person.Address</td>
                <td>@person.Gender</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@person.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@person.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
