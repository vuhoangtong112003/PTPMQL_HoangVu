
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h3 class="text-center text-primary">Tính điểm trung bình</h3>
                
                <form asp-action="Index" asp-controller="Diem" method="post">
                    <div class="mb-3">
                        <label for="scoreA" class="form-label">Điểm hệ số A:</label>
                        <input type="number" id="scoreA" name="A" class="form-control" step="0.1" required>
                    </div>

                    <div class="mb-3">
                        <label for="scoreB" class="form-label">Điểm hệ số B:</label>
                        <input type="number" id="scoreB" name="B" class="form-control" step="0.1" required>
                    </div>

                    <div class="mb-3">
                        <label for="scoreC" class="form-label">Điểm hệ số C:</label>
                        <input type="number" id="scoreC" name="C" class="form-control" step="0.1" required>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Tính điểm</button>
                </form>

                    <div class="mt-4 text-center">
                        <h4>Kết quả: <span class="fw-bold">@ViewBag.Tong</span></h4>
                        <p class="fw-bold text-uppercase text-danger">@ViewBag.HocLuc</p>
                    </div>
                
            </div>
        </div>
    </div>
</div>